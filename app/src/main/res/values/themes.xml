<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RecyclerView" parent="Theme.Material3.DayNight">
        <!-- Colores bÃ¡sicos del tema -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorSecondary">@color/purple_200</item>
        <item name="backgroundColor">@color/white</item>
        <item name="colorSurface">@color/purple_700</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/purple_700</item>
        <item name="colorOnSurface">@color/purple_200</item>

        <!-- Colores para elementos interactivos -->
        <item name="colorError">@color/red_500</item>
        <item name="colorOnError">@color/white</item>

        <!-- Colores de estado de los botones -->
        <item name="colorPrimaryVariant">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_200</item>

        <!-- Estilo de los botones -->
        <item name="buttonStyle">@style/ButtonStyle</item>
    </style>

    <!-- Estilo para los botones -->
    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item> <!-- Color de texto de los botones -->
        <item name="android:backgroundTint">@color/purple_200</item> <!-- Fondo de los botones -->

    </style>

    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:iconTint">@color/white</item>
    </style>

    <style name="Theme.RecyclerView" parent="Base.Theme.RecyclerView" />
</resources>
